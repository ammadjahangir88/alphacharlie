<div class='row'>
  <div class='col-md-12'>
 <%= form_for( [current_user,@group], :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class='form-group'>
       <div class= 'control-label col-sm-2'>
        <%= f.label :name %> 
       </div>
       <div class= 'col-sm-8'>
        <%= f.text_field :name, class:'form-control' ,placeholder:"Title of Article" ,autofocus:true %>
       </div>
    </div>
     <div class='form-group'>
         <div class= 'control-label col-sm-2'>
        
         <%= f.radio_button :grouptype, 'Public' %> Public
         <%= f.radio_button :grouptype, 'Private' %> Private
     </div>
     
      
   

    </div>
     <div style="margin: 20px">
      <%= f.label :image  %>
      <%= f.file_field :image  %>


    </div>
    <div class='form-group'>
      <div class="col-sm-offset-2 col-sm-2">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
     </div>
    </div>
    

<% end %>