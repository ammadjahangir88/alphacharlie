<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">
                    <div class="row">
                    <%= image_tag "image.png", class:"logo"%> 
                       
                    </div>
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                    <%= image_tag "main_image.png", class:"image"%> 
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card2 card border-0 px-4 py-5">
                    
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="row px-3">
                    <%= f.label :login  , class:"mb-1" %> 
                     <%= f.text_field :login, class:"mb-4", autofocus: true, autocomplete: "email" ,placeholder: "Enter User Name" %>
                 
                    </div>
                    <div class="row px-3">
                    <%= f.label :password  , class:"mb-1" %> 
                     <%= f.password_field :password, autocomplete: "current-password", class:"mb-4"  %>
                 
                    </div>

                    

                    <div class="row mb-3 px-3">
                  
                     <%= f.submit "Log in" , class: "btn btn-blue text-center" %>
                
                        
                    </div>
                    <div class="row mb-4 px-3">
                        <small class="font-weight-bold">Don't have an account? <a class="text-danger "><%= render "devise/shared/links" %></a></small>
                    </div>
                     <% end %>
                </div>

            </div>
        </div>
    </div>
</div>
